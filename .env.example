# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/pumpiq
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# AI API KEYS
# ============================================================================
# Google Gemini (DEFAULT – free tier: 15 RPM)
# Get key at: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# OpenAI (OPTIONAL – legacy fallback, requires paid key)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# ============================================================================
# DATA SOURCE API KEYS
# ============================================================================

# News APIs
NEWS_API_KEY=your_news_api_key
CRYPTOPANIC_API_KEY=your_cryptopanic_key

# Blockchain Data
SOLSCAN_API_KEY=your_solscan_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key
DEXSCREENER_API_KEY=your_dexscreener_key

# Market Data
COINGECKO_API_KEY=your_coingecko_api_key

# DexScreener via Apify (optional enrichment)
# Get key at: https://apify.com/account/integrations
APIFY_API_KEY=your_apify_api_key

# Solana RPC (for on-chain holder data)
# Default public endpoint works, but rate-limited.
# For production use Helius / QuickNode.
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
SECRET_KEY=your_very_secret_jwt_signing_key_change_this_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# ============================================================================
# API SETTINGS
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true  # Set to false in production

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# CELERY CONFIGURATION
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=300

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
SENTRY_DSN=your_sentry_dsn_for_error_tracking
PROMETHEUS_PORT=9090

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE=redis://localhost:6379/3

# ============================================================================
# CACHE SETTINGS
# ============================================================================
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=pumpiq_

# ============================================================================
# OPTIONAL: PRODUCTION SETTINGS
# ============================================================================
# DATABASE_POOL_SIZE=20
# DATABASE_MAX_OVERFLOW=10
# ENABLE_HTTPS=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
